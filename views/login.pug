doctype html
html
  head
    include utils.pug
    title="Express Starter App"
    link(rel='stylesheet' href='/stylesheets/reset.css')

  body
    img(src='https://cdn2.iconfinder.com/data/icons/cinema-and-music-innovicons-black-and-white/128/button-pop_corn-film_strip-cinema-movie-512.png' class='popcorn')
    h1 Login
    +validationErrorSummary(errors)
    div(class='login-card')
      form(action="/users/login" method='post' class='form-group')
        input(type='hidden' name='_csrf' value=csrfToken)
        div(class='login-card_1')
          label(for='email' class='form-label')= 'Email Adress: '
        div(class='login-card_2')  
          input(type='email' id='email' name='email' class='form-label')
        div(class='login-card_3')  
          label(for='password' class='form-label')= 'Password: '
        div(class='login-card_4')
          input(type='password' id='password' name='password' value=null class='form-control')
          div(class='login-card_5') 
            button(type='submit' class='btn btn-primary' id='button-center') Login
            a(href='/' class='btn btn-warning ml-2' id='button-center') Cancel
    div  
      p: a(href='/users/register') Don't have an account?
      